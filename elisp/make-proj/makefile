#[[## makefile automates the build and deployment for Emacs Lisp projects]]#

# type of project
PROJ_TYPE=	elisp
# make modules to add functionality to a build
#PROJ_MODULES=	docker release model

# edit these if you want
#GITUSER=	johndoe

# additional resources generated by the build that should be cleaned up
#ADD_CLEAN+=

# make build dependencies
_ :=	$(shell [ ! -d .git ] && git init ; [ ! -d zenbuild ] && \
	  git submodule add git@github.com:plandes/zenbuild.git && make gitinit )

include ./zenbuild/main.mk
