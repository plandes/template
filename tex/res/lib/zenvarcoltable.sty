\NeedsTeXFormat{LaTeX2e}
\ProvidesPackage{zenvarcoltable}[2016/10/18 Variable Table Column]

\usepackage{tabularx}

% ex: \begin{ddvarcoltable}{param-feat-sets}{Argument feature sets.}{}{|l|X|}
% ex: \begin{ddvarcoltable}{param-feat-sets}{Argument feature sets.}{\small}{|l|X|}
% ex: \begin{ddvarcoltable}[3in]{param-feat-sets}{Argument feature sets.}{\small}{|l|X|}
\newenvironment{ddvarcoltable}[5][\textwidth]%
{%
\newcommand{\ddvarcoltablelab}{tab:#2}%
\newcommand{\ddvarcoltablecap}{#3}%
\table[ht]%
\centering#4%
\tabularx{#1}{#5}%
}
{%
\endtabularx%
\caption{\ddvarcoltablecap}%
\label{\ddvarcoltablelab}%
\endtable%
}
